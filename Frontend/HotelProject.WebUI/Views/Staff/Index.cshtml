@model List<StaffViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<div class="col-lg-12">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Personel Listesi</h4>
            <div class="table-responsive">
                <table class="table table-bordered verticle-middle">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Ad</th>
                            <th scope="col">Soyad</th>
                            <th scope="col">Unvan</th>
                            <th scope="col">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var item in Model){
                        <tr>
                                <td>@item.StaffID</td>
                                <td>@item.StaffFirstName</td>
                                <td>@item.StaffLastName</td>
                                <td>@item.StaffTitle</td>
                            <td>
                                    <span class="mr-3">
                                        <a asp-action="UpdateStaff" asp-route-id="@item.StaffID" data-toggle="tooltip" data-placement="top" title="" data-original-title="Güncelle"><i class="fa fa-pencil color-muted m-r-5"></i> </a>
                                    </span> 
                                    <span class="mr-3">
                                        <a asp-action="DeleteStaff" asp-route-id="@item.StaffID" data-toggle="tooltip" data-placement="top" title="" data-original-title="Sil"><i class="fa fa-close color-danger"></i></a>
                                    </span>
                                    <span class="mr-3"> <a href="#" data-toggle="tooltip" data-placement="top" title="" data-original-title="Detaylar"><i class="fa fa-file  color-danger"></i></a>
                                    </span>
                                </td>
                        </tr>
                        }
                    </tbody>
                    
                </table>
                <a asp-action="AddStaff" class="btn mb-1 btn-rounded btn-outline-info">Yeni Personel Ekle</a>
            </div>
        </div>
    </div>
</div>
