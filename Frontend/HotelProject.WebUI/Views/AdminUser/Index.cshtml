@model List<HotelProject.EntityLayer.Concrete.AppUser>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<h1>Index</h1>

                    <div class="table-responsive">
                        <table class="table table-xs mb-0">
                            <thead>
                                <tr>
                                    <th>Kullanıcı</th>
                                    <th>Şehir</th>
                                    <th>Mail</th>
                                    <th>Durum</th>

                                    
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
            {
                
           
                                <tr>
                                    <td><img src="@item.ImageUrl" class=" rounded-circle mr-3" alt="">@item.FirstName @item.LastName</td>
                                    <td>@item.City</td>
                                    <td>
                                        <span>@item.Email</span>
                                    </td>
                                   
                                    <td><i class="fa fa-circle-o text-success  mr-2"></i> Aktif</td>
                                   
                                </tr>

                                }
                            </tbody>
                        </table>
                    </div>
  