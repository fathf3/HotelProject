@model CreateGuestDTO
@{
    ViewData["Title"] = "AddGuest";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<h1 style="text-align:center">Müşteri Ekle</h1>

<form method="post">


    <label>Ad Soyad</label>
    <input type="text" asp-for="Name" class="form-control mb-2" />
    <span asp-validation-for="Name" class="text-danger"></span>
    <br />
    <label>Mail</label>
    <input type="text" asp-for="SurName" class="form-control mb-2" />
    <span asp-validation-for="SurName" class="text-danger"></span>
    <br />
    <label>Şehir</label>
    <input type="text" asp-for="City" class="form-control mb-2" />
    <span asp-validation-for="City" class="text-danger"></span>

    <button class="btn mb-1 btn-rounded btn-outline-secondary">Kaydet</button>
</form>


