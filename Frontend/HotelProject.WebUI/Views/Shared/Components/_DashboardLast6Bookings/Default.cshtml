@model List<ResultBookingDTO>


<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <div class="active-member">
                    <div class="table-responsive">
                        <table class="table table-xs mb-0">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Müşteri</th>
                                    <th>Mail</th>
                                    <th>Kişi Sayısı</th>
                                    <th>Çocuk Sayısı</th>
                                    <th>Giriş Tarihi</th>
                                    <th>Durum</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    
                               
                                <tr>
                                    <td>@item.BookingID</td>
                                    <td>@item.FirstName</td>
                                    <td>@item.LastName</td>
                                    <td>@item.AdultCount</td>
                                    <td>@item.ChildCount</td>
                                    <td>@item.CheckIn</td>
                                        @if(item.Status == "Onay Bekliyor")
                                        {
                                            <td><span class="label label-pill label-warning">@item.Status</span></td>
                                        }
                                        else if (item.Status == "Onaylandı")
                                        {
                                            <td><span class="label label-pill label-success">@item.Status</span></td>
                                        }
                                        else
                                        {
                                            <td><span class="label label-pill label-light">@item.Status</span></td>
                                        }
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




