@model List<ResultAboutDTO>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<div class="col-lg-12">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Otel Hakkında</h4>
            <div class="table-responsive">
                <table class="table table-bordered verticle-middle">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Başlık </th>
                            <th scope="col">Alt Başlık</th>
                            <th scope="col">İçerik</th>
                            <th scope="col">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.AboutID</td>
                                <td>@item.Title1</td>
                                <td>@item.Title2</td>
                                <td>@item.Content</td>
                                
                                <td>
                                    <span class="mr-3">
                                        <a asp-action="UpdateAbout" asp-route-id="@item.AboutID" data-toggle="tooltip" data-placement="top" title="" data-original-title="Güncelle"><i class="fa fa-pencil color-muted m-r-5"></i> </a>
                                    </span>
                                    <span class="mr-3">
                                        <a asp-action="DeleteAbout" asp-route-id="@item.AboutID" data-toggle="tooltip" data-placement="top" title="" data-original-title="Sil"><i class="fa fa-close color-danger"></i></a>
                                    </span>
                                    <span class="mr-3">
                                        <a href="#" data-toggle="tooltip" data-placement="top" title="" data-original-title="Detaylar"><i class="fa fa-file  color-danger"></i></a>
                                    </span>
                                </td>
                            </tr>
                        }   
                    </tbody>

                </table>
                @*<a asp-action="" class="btn mb-1 btn-rounded btn-outline-info"></a>*@
            </div>
        </div>
    </div>
</div>

