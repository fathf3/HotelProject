@using HotelProject.WebUI.Models.Api;
@model List<ExchangeViewModel.Exchange_Rates>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
    int count = 0;
}

<h1>Güncel Döviz Kurları</h1>


    <div class="card">
        <div class="card-body">
            
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Döviz Kodu</th>
                            <th>Birim Fiyat</th>
                           
                        </tr>
                    </thead>
                    <tbody>
                       @foreach (var item in Model)
                    {
                        count++;

                        <tr>
                            <th>@count</th>
                            <td>@item.currency</td>
                            <td>
                                <span class="badge badge-primary px-2">@item.exchange_rate_buy</span>
                            </td>
                            
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
